# URL of the UI to render (Vite preview or static server)
RENDER_URL=http://localhost:3000/

# Final image output path
RENDER_OUTPUT=/tmp/screen.png

# E-ink resolution or TRMNL target size
RENDER_WIDTH=800
RENDER_HEIGHT=480

# Rendering interval (milliseconds)
RENDER_INTERVAL_MS=60000

# Which browser to use (chromium/firefox/webkit)
# chromium is best for React UIs.
PLAYWRIGHT_BROWSER=chromium

# Whether to use no-sandbox mode (needed on Raspberry Pi sometimes)
NO_SANDBOX=true

# Optional: extra debug logging
RENDER_DEBUG=false
